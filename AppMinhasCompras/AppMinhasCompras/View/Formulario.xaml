<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMinhasCompras.View.Formulario"
             Title="{Binding Source={x:Reference txt_nome}, Path=Text}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="ToolbarItem_Clicked" Text="Salvar" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <Frame>
            <StackLayout>
                <Label Text="Produto:" />
                <Entry x:Name="txt_nome" Text="{Binding Nome }" />
                
                <Label Text="Quantidade:" />
                <Entry x:Name="txt_qnt" Text="{Binding Qnt}" Keyboard="Numeric" />
                
                <Label Text="Preço:" />
                <Entry x:Name="txt_preco" Text="{Binding Preco}" Keyboard="Numeric" />
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>